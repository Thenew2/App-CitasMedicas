<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MenuActivity2">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="60dp"
            android:text="Inicio"
            android:textSize="60dp"
            android:fontFamily="@font/bondrians"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <Button
            style="@style/MenuButton"
            android:layout_width="match_parent"
            android:backgroundTint="@color/btn_color"
            android:drawableLeft="@drawable/ic_post_add"
            android:text="Registar cita" />

        <Button

            style="@style/MenuButton"
            android:layout_width="match_parent"
            android:backgroundTint="@color/btn_color"
            android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
            android:text="Mis citas" />

        <Button
            android:id="@+id/btn_lougout"
            style="@style/MenuButton"
            android:layout_width="match_parent"
            android:backgroundTint="@color/btn_color"
            android:drawableLeft="@drawable/ic_logout"
            android:text="Cerrar secion" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>